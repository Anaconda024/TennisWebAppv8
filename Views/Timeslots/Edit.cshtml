@model TennisWebApp8.Data.Timeslot

@{
    ViewData["Title"] = "Edit";
}


<div class="booking-container1">
    <div class="card card-4 ">
        <div class="card-body">
            <h4 class="title">Edit Timeslot</h4>

            <div class="row">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="row ">
                        <div class="col-6">
                            <div class="input-group">
                                <label class="label">Day</label>
                                <input asp-for="Day" class="input--style-4" />
                                <span asp-validation-for="Day" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="input-group">
                                <label class="label">Time</label>
                                <input asp-for="Time" class="input--style-4" />
                                <span asp-validation-for="Time" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-6">
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Booked" /> @Html.DisplayNameFor(model => model.Booked)
                                </label>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="bluebutton" />
                            </div>
                            <div>
                                <a class="greenbutton" asp-action="TimeslotIndex">Back to List</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
