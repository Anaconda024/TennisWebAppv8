@using Microsoft.AspNetCore.Identity
@using TennisWebApp8.Data
@inject SignInManager<AccountUser> SignInManager
@inject UserManager<AccountUser> UserManager



<ul class="navbar-nav user-panel mt-3 pb-3 mb-3 d-flex">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <div class="image">
                <img src="dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <i class="fa fa-sign-out"></i>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">            
            <a type="button" class="nav-link" asp-area="Identity" asp-page="/Account/Register">
                <i class="fa fa-sign-in-alt nav-icon"></i>
                Register
            </a>
        </li>
        <li class="nav-item">            
            <a type="button" class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                <i class="fa fa-pencil-alt nav-icon"></i>
                LOGIN
            </a>
        </li>

    }
</ul>
