@model TennisWebApp8.Data.AccountUser

@{
    ViewData["Title"] = "Edit";
}

<div class="booking-container1">
    <div class="card card-4 ">
        <div class="card-body">
            <h4 class="title">Edit Players</h4>
            <div class="row">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="row ">
                        <div class="col-6">
                            <div class="input-group">
                                <label  class="label">First Name</label>
                                <input asp-for="FirstName" class="input--style-4" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="input-group">
                                <label class="label">Last Name</label>
                                <input asp-for="LastName" class="input--style-4" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-6">
                            <div class="input-group">
                                <label class="label">Age</label>
                                <input asp-for="Age" class="input--style-4" />
                                <span asp-validation-for="Age" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="input-group">
                                <label class="label">Level</label>
                                <input asp-for="Level" class="input--style-4" />
                                <span asp-validation-for="Level" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-6">
                            <div class="input-group">
                                <label asp-for="MembershipPaid" class="label"></label>
                                <input asp-for="MembershipPaid" class="form-control" />
                                <span asp-validation-for="MembershipPaid" class="text-danger"></span>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                    <div>
                        <a class="btn btn-success" asp-action="PlayerIndex">Back to List</a>
                    </div>
                </form>
            </div>

            
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

