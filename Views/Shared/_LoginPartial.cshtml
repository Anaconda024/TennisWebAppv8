@using Microsoft.AspNetCore.Identity
@using TennisWebApp8.Data
@inject SignInManager<AccountUser> SignInManager
@inject UserManager<AccountUser> UserManager

<ul class="nav nav-pills nav-sidebar flex-column">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <i class="fa fa-sign-out"></i>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white">Logout</button>
            </form>
        </li>
    }
    else
    {

        <li class="nav-item active">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
                <i class="fas fa-pencil-alt "></i>                
                <p>Register</p>                
            </a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                <i class="fas fa-sign-in-alt "></i>                
                <p>Login</p>                
            </a>
        </li>
    }
</ul>
